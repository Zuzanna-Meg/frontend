<div class="container card p-5 m-2 shadow text-center">
    <h1>Open Games</h1>
    <p class="text-center">A list of games with open slots. <a href="/contactus">Get in touch</a> with us to join!</p>

    <div class="row">
        <div class="container">
            {{#each games}}
            <div class="card bg-light mb-3 w-50 shadow mx-auto">
                <h4 class="card-header" style="background-color: #f8dbe9;">Title: {{this.name}}</h4>
                <div class="card-body" style="background-color: lightgrey;">
                    <h5 class="card-title">Game Master: {{this.dm.name}}</h5>
                    <small class="text-body-secondary">System: {{this.system}}<br>Number of Players: {{this.slots}}</small>
                    
                    <p class="card-text">{{this.description}}</p>
                </div>
            </div>
            {{else}}
            <p>Sorry, there aren't any open games at the moment.</p>
            {{/each}}
        </div>
    </div>
</div>