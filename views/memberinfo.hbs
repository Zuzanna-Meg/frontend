<div class="container card p-5 m-2 shadow">
    <h1>Member Details</h1>
    <div class="col-8" style="text-align: left;">
        <a href="/members" class="btn btn-light" type="button"><i data-feather="arrow-left"></i> Back to Member List</a>
    </div>
    <div class="container p-3">
        <div class="p-2 d-grid gap-2 col-6 mx-auto card bg-light">
            <table class="table table-light">
                <tbody>
                    <tr>
                        <th scope="row">Name</th>
                        <td>{{member.name}}</td>
                    </tr>
                    <tr>
                        <th scope="row">Email</th>
                        <td>{{member.email}}</td>
                    </tr>
                    <tr>
                        <th scope="row">Type</th>
                        <td>{{#if member.student}}Student{{else}}Associate{{/if}}</td>
                    </tr>
                    {{#if member.student}}
                    <tr>
                        <th scope="row">Student Number</th>
                        <td>{{member.bcode}}</td>
                    </tr>
                    {{/if}}
                    <tr>
                        <th scope="row">Games - Player</th>
                        <td>
                            <ul>{{#each member.games}}<li>{{this.name}}</li>{{/each}}</ul>
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">Games - DM</th>
                        <td>
                            <ul>{{#each member.gamesDm}}<li>{{this.name}}</li>{{/each}}</ul>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="p-2 d-grid gap-2 col-6 mx-auto">
            <button class="btn btn-secondary pink-btn" type="button" data-bs-toggle="modal" data-bs-target="#editModal">Edit <i data-feather="edit"></i></button>
            <button onclick="deleteMember({{member.member_id}})" class="btn btn-danger" type="button" id="deleteMember">Delete <i data-feather="trash-2"></i></button>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="editModalLabel">Modal title</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form style="font-size: 10pt;" id="editMemberForm">
            <div class="mb-3">
                <label for="Name" class="form-label">Name</label>
                <input type="text" class="form-control" id="Name" value="{{member.name}}">
            </div>
            <div class="mb-3">
                <label for="Email" class="form-label">Email</label>
                <input type="text" class="form-control" id="Email" value="{{member.email}}">
            </div>
            <div class="mb-3">
                <input class="form-check-input" type="checkbox" value="" id="Student" onchange="toggleBcode()" {{#if member.student}}checked{{/if}}>
                <label for="Student" class="form-label">Student</label>
            </div>
            <div class="mb-3">
                <label for="Bcode" class="form-label">Student Number</label>
                <input type="text" class="form-control" id="Bcode" {{#unless member.student}}disabled="disabled"{{/unless}} value="{{member.bcode}}">
            </div>

        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" onclick="editMember({{member.member_id}})" id="saveChanges">Save changes</button>
      </div>
    </div>
  </div>
</div>


